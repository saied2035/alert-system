<div class="flex justify-center h-[100vh] max-w-full">
<div class="mt-3 flex flex-col items-center justify-center h-fit gap-6 max-w-full">
<h2 class="text-3xl">Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), 
html: {class: "flex flex-col items-center gap-3 max-w-full"}) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "w-full" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "w-full" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "px-12 py-4 pb-2 pt-2 font-semibold text-xl text-white 
    bg-blue-500 rounded-xl cursor-pointer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<p class="text-base text-red-500 font-semibold text-center"><%=flash[:alert]%></p>
</div>
</div>