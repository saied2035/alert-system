<div class="flex justify-center h-[100vh] max-w-full">
<div class="mt-1 flex flex-col items-center h-fit gap-6 max-w-full">
<h2 class="text-3xl">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
html: {class: "flex flex-col items-center gap-3 max-w-full"}) do |f| %>

  <div class="px-5">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"w-full" %>
  </div>

  <div class="px-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full" %>
  </div>

  <div class="px-5">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:"w-full" %>
  </div>

  <div class="px-5">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"w-full" %>
  </div>

  <div>
    <%= f.submit "Sign up", class:'px-12 py-4 pb-2 pt-2 font-semibold text-xl text-white 
    bg-blue-500 rounded-xl cursor-pointer'%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<%= render "devise/shared/error_messages", resource: resource %>
</div>
</div>